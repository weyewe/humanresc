					<li>
						<!-- <label class="required" title="Tanggal Lahir" for="birthday">
													Tanggal Lahir
												</label>
												<input id="birthday" type="text" name="birthday"> -->
						
						<%= f.label :birthday, "Tanggal Lahir", :class => "required"%>
						<%= f.date_select :birthdate, {:order => [:day, :month, :year] , :start_year => Time.now.year - 60} %>
						
					</li>
					
					
					
					<li>
						<!-- <label class="required" title="Kewarganegaraan" for="nationality">
