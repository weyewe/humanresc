						<!-- <label class="required" title="nama lengkap" for="name">
												Nama Lengkap
											</label> -->
						<%= f.label :name, "Nama Lengkap", :class => "required"%>
						<%= f.text_field :name %>
						<!-- <input id="name" type="text" name="name"> -->
					</li>
					
					<li>
						<!-- <label class="required" title="NIK" for="nik">
													NIK
