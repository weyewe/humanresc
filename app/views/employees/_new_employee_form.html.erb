						<%= f.label :race, "Suku", :class => "required"%>
						<%= f.text_field :race %>
					</li>
					
					<li>
						<!-- <label class="required" title="Suku" for="photo">
													Foto
												</label>
												<input id="photo" type="file" name="photo"> -->
						<%= f.label :photo, "Foto", :class => "required"%>
						<%= f.file_field :photo %>
						
					</li>
				</ol>
			</fieldset>
			
